@model Stored_procedure.Models.User_data
@{
    ViewBag.Title = "edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid ">
    <div class="row py-5 px-5">
        <form method="post" action="/Home/edit_data">
            <h4 class="fw-bold">Edit Form...</h4>
            <input type="hidden" name="id" value=" @Model.Id" />
            <div class="mb-3">
                <label class="form-label w-100 fw-bold">Name</label>
                <input type="text" class="form-control" id="name" name="name" value="@Model.name" placeholder="Enter name">

            </div>
            <div class="mb-3">
                <label class="form-label fw-bold">Email address</label>
                <input type="email" class="form-control" id="email" name="email" value="@Model.email" placeholder="Enter email">


            </div>
            <div class="mb-3">
                <label class="form-label fw-bold">Password</label>
                <input type="text" class="form-control" id="pass" name="password" value="@Model.password" placeholder="Enter password">


            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Number</label>
                <input type="number" class="form-control" id="number" name="number" value="@Model.number" placeholder="enter number" />


            </div>
            <div class="mb-3">
                <input type="submit" class="btn btn-primary" value="Submit" />
            </div>
        </form>
    </div>
</div>

